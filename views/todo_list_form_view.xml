<?xml version="1.0"?>
<openerp>
	<data> 
        <record id="todo_task_list_form_view" model="ir.ui.view" >
                <field name="name">todo task list</field>
                <field name="model">todo.list.task</field>
                <field name="arch" type="xml">
                    <form string="todo_task_form">
						<!--<header>
						<field name="state" widget='statusbar'/>
						</header>-->
						<group>
							<group>
								<field name="name"/>
								<field name="employee_id"/>
							</group>
							<group>
								 <field name="task_date"/>
							</group>
                        </group>
                     <label for="subtask_ids"/>
                     <field name="subtask_ids" >
                        <tree>
                           <field name="name"/>
                           <field name="description"/>
                           <field name="sub_task_done"/>
                           <field name="task_date"/>
                           <field name="do_it"/>
                        </tree>
                    </field> 
                   </form>
                </field>
        </record>
    </data>
</openerp>			
